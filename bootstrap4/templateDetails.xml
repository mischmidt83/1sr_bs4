                <field name="showSiteName" type="list" default="yes" label="TPL_BOOTSTRAP4_SHOW_SITE_NAME" description="TPL_BOOTSTRAP4_SHOW_SITE_NAME_DESC">
                    <option value="yes">TPL_BOOTSTRAP4_YES</option>
                    <option value="no">TPL_BOOTSTRAP4_NO</option>
                </field>

                <field name="googleAnalyticsAccount" type="text" default="" label="TPL_BOOTSTRAP4_GOOGLE_ANALYTICS_ACCOUNT" description="TPL_BOOTSTRAP4_GOOGLE_ANALYTICS_ACCOUNT_DESC" filter="string" />

                <field name="googleMapsApiKey" type="text" default="" label="TPL_BOOTSTRAP4_GOOGLE_MAPS_API_KEY" description="TPL_BOOTSTRAP4_GOOGLE_MAPS_API_KEY_DESC" filter="string" />

                <field name="googleAdClient" type="text" default="" label="TPL_BOOTSTRAP4_GOOGLE_AD_CLIENT" description="TPL_BOOTSTRAP4_GOOGLE_AD_CLIENT_DESC" filter="string" />

                <field name="showCookieDeclineButton" type="list" default="no" label="TPL_BOOTSTRAP4_SHOW_TPL_BOOTSTRAP4_COOKIE_DECLINE_BUTTON" description="TPL_BOOTSTRAP4_SHOW_TPL_BOOTSTRAP4_COOKIE_DECLINE_BUTTON_DESC">
                    <option value="yes">TPL_BOOTSTRAP4_YES</option>
                    <option value="no">TPL_BOOTSTRAP4_NO</option>
                </field>
            </fieldset>
        </fields>
    </config>
