    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="sitedescription"  type="text" default="" label="JGLOBAL_DESCRIPTION" description="JGLOBAL_SUBHEADING_DESC" filter="string" />
                <field name="fixedWidth" type="list" default="yes" label="TPL_BOOTSTRAP4_FIXED_WITH" description="TPL_BOOTSTRAP4_FIXED_WITH_DESC">
                    <option value="yes">TPL_BOOTSTRAP4_YES</option>
                    <option value="no">TPL_BOOTSTRAP4_NO</option>
