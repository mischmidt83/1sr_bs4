                <field name="sassFiles" type="textarea" default="[&quot;1sr-bs4.scss&quot;]" label="TPL_BOOTSTRAP4_SASS_FILES" description="TPL_BOOTSTRAP4_SASS_FILES_DESC" rows="10" cols="5" filter="raw"/>

